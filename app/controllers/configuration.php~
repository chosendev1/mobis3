class Configuration extends CI_Controller{
	public $data;
	public function __construct(){
		parent::__construct();
		$this->data['js'] = array("configuration/js/default.js");
		$this->load->helper('URL');
		$this->load->model("users_model");
		$this->load->model("configuration_model");
		$uid = CAP_Session::get('userId');
		$this->data['xajaxOn'] = true;
		$this->data['css'] = array("resources/themes/admire/plugins/jqueryui/css/jquery-ui-timepicker.min.css","resources/themes/admire/plugins/jqueryui/css/jquery-ui.min.css");
		$this->data['js'] = array("resources/themes/admire/plugins/sparkline/js/jquery.sparkline.min.js",
					"resources/themes/admire/plugins/sparkline/js/jquery.sparkline.min.js",
					"resources/themes/admire/javascript/app.min.js",
					"resources/themes/admire/plugins/inputmask/js/inputmask.min.js",
					"resources/themes/admire/plugins/selectize/js/selectize.min.js",
					"resources/themes/admire/plugins/jqueryui/js/jquery-ui.min.js",
					"resources/themes/admire/plugins/jqueryui/js/jquery-ui-timepicker.min.js",
					"resources/themes/admire/plugins/jqueryui/js/jquery-ui-touch.min.js",
					"resources/themes/admire/javascript/forms/element.js",
					);
		if(!isset($uid))
			redirect(base_url()."serviceAuth");
		$this->load->model("configuration_model");
	}
	
	public function index(){
		$this->load->view("includes/libInc", $this->data);
		$this->load->view("includes/headerForm",$this->data);
		$this->load->view("configuration/index");
	}
	
	public function organisationSettings(){
		$this->data['settings'] = $this->configuration_model->getOrganizationSettings();
		$this->data['lang'] = strings();
		$this->data['settings'] = "these settings";
		//$this->load->view("includes/libInc", $this->data);
		$this->load->view("includes/headerForm",$this->data);
		$this->load->view("configuration/organisationSettings");
		
	}
	
	public function saveOrganisationSettings(){
		$this->data = array();
		$status = $this->configuration_model->saveOrganizationSettings();
		$this->data['link'] = "configuration/organisationSettings";
		$this->data['status'] = $status === true ? "success" : $status;
		echo(json_encode($this->data));
	}	
	
	public function getOrganizationStructure(){
		$this->data['org'] = $this->configuration_model->getOrganizationStructure();
		$this->load->view("configurations/organizationStructure", $this->data);
	}
	
	public function accountsSettings(){
		$this->view->render("configuration/accountSettings");
	}
	
	public function getAccounts(){
		$accounts = $this->model->getAccounts();
	}
	
	public function organisationStructure(){
		$this->view->render("configuration/organisationStructure");
	}
	
	public function organisationLevels(){
		$this->view->render("configuration/organisationLevels");
	}
	
	public function teachingRooms(){
		$this->view->render("configuration/teachingRooms");
	}
	
	public function halls(){
		$this->view->render("configuration/halls");
	}
}
?>
