        <script type="text/javascript" language="javascript">
        	function createDate(dateField){
        		
        		ng.ready(function () {
        			$("#"+dateField).datepicker({
        				
        				changeMonth: true,
        				changeYear: true,
        				dateFormat: 'yy-mm-dd'
   				 });	
        		});
        	}
        	
        	function createDOB(dateField){
        		
        		ng.ready(function () {
        			$("#"+dateField).datepicker({
        				
        				changeMonth: true,
        				changeYear: true,
        				yearRange: '-100:-10',
        				dateFormat: 'yy-mm-dd'
   				 });	
        		});
        	}
        	
        </script>
